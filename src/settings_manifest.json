{
    "viewerSettings": {
        "categories": {
            "view": {
                "label": "View",
                "settings": {
                    "curvedEdges": {
                        "label": "Draw curved edges (turn this off if you are experiencing performance issues)",
                        "type": "boolean",
                        "default": true
                    },
                    "toolbar": {
                        "label": "Show toolbar",
                        "type": "boolean",
                        "default": true,
                        "hidden": true
                    },
                    "minimap": {
                        "label": "Show minimap",
                        "type": "boolean",
                        "default": true,
                        "redrawUI": true
                    },
                    "alwaysOnISEdgeLabels": {
                        "label": "Always show interstate edge labels",
                        "type": "boolean",
                        "default": true
                    },
                    "showAccessNodes": {
                        "label": "Show access nodes",
                        "type": "boolean",
                        "default": true,
                        "relayout": true
                    },
                    "showStateNames": {
                        "label": "Show state names",
                        "type": "boolean",
                        "default": true
                    },
                    "showMapSchedules": {
                        "label": "Show scope schedules",
                        "type": "boolean",
                        "default": true
                    },
                    "showDataDescriptorSizes": {
                        "label": "Show data descriptor sizes on access nodes (hides data container names)",
                        "type": "boolean",
                        "default": false,
                        "relayout": true
                    },
                    "inclusiveRanges": {
                        "label": "Use inclusive ranges",
                        "type": "boolean",
                        "default": false,
                        "relayout": true
                    },
                    "useVerticalStateMachineLayout": {
                        "label": "Use vertical state machine layout",
                        "type": "boolean",
                        "default": true,
                        "relayout": true
                    },
                    "ranksep": {
                        "label": "Vertical node spacing",
                        "type": "range",
                        "default": 30,
                        "minimum": 10,
                        "maximum": 100,
                        "step": 1,
                        "relayout": true
                    },
                    "nodesep": {
                        "label": "Horizontal node spacing",
                        "type": "range",
                        "default": 50,
                        "minimum": 0,
                        "maximum": 100,
                        "step": 1,
                        "relayout": true
                    }
                }
            },
            "mouse": {
                "label": "Navigation",
                "settings": {
                    "useVerticalScrollNavigation": {
                        "label": "Use vertical scroll navigation (binds zoom to Ctrl + scroll)",
                        "type": "boolean",
                        "default": false
                    },
                    "bindToViewport": {
                        "label": "Restrict panning to ensure the graph is always visible",
                        "type": "boolean",
                        "default": true
                    }
                }
            },
            "performance": {
                "label": "Performance",
                "settings": {
                    "adaptiveContentHiding": {
                        "label": "Adaptively hide content when zooming out (Warning: turning this off can cause performance issues on large graphs)",
                        "type": "boolean",
                        "default": true
                    },
                    "taskletLOD": {
                        "label": "Zoom threshold for drawing tasklet contents",
                        "type": "range",
                        "default": 0.35,
                        "minimum": 0.0,
                        "maximum": 5.0,
                        "step": 0.01,
                        "relayout": false
                    },
                    "scopeLOD": {
                        "label": "Zoom threshold for drawing simple versions of scopes",
                        "type": "range",
                        "default": 0.75,
                        "minimum": 0.0,
                        "maximum": 5.0,
                        "step": 0.01,
                        "relayout": false
                    },
                    "edgeLOD": {
                        "label": "Zoom threshold for drawing memlets and control flow edges",
                        "type": "range",
                        "default": 5.0,
                        "minimum": 0.0,
                        "maximum": 10.0,
                        "step": 0.1,
                        "relayout": false
                    },
                    "nodeLOD": {
                        "label": "Zoom threshold for drawing node shapes and labels",
                        "type": "range",
                        "default": 5.0,
                        "minimum": 0.0,
                        "maximum": 10.0,
                        "step": 0.1,
                        "relayout": false
                    },
                    "textLOD": {
                        "label": "Zoom threshold for drawing node text",
                        "type": "range",
                        "default": 1.5,
                        "minimum": 0.0,
                        "maximum": 10.0,
                        "step": 0.1,
                        "relayout": false
                    },
                    "nestedLOD": {
                        "label": "Zoom threshold for drawing contents of control flow blocks and nested SDFGs",
                        "type": "range",
                        "default": 1.5,
                        "minimum": 0.0,
                        "maximum": 10.0,
                        "step": 0.1,
                        "relayout": false
                    },
                    "summarizeLargeNumbersOfEdges": {
                        "id": "summarizeLargeNumbersOfEdges",
                        "label": "Hide and summarize edges for nodes with more than 10 incoming or outgoing edges",
                        "type": "boolean",
                        "default": false,
                        "relayout": true
                    }
                }
            }
        }
    }
}
