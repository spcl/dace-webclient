{
    "compilerOptions": {
        /* Language and environment */
        "target": "ES2022",

        /* Modules */
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        /* Emit */
        "declaration": true,
        "sourceMap": true,
        "outDir": "./out",

        /* Javascript support */
        "allowJs": true,
        "checkJs": false,

        /* Interop constraints */
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,

        /* Type checking */
        "strict": true,
        "noImplicitAny": true,

        /* Completeness */
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*",
        "tests/**/*.test.ts",
        "jest.config.ts",
        "jest.setup.ts",
    ]
}
